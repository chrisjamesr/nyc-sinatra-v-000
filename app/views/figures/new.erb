<h1>Create a New figure</h1>

<form action="/figures" method="POST">
  <p><label for="figure_name"></label> Enter Figure Name:
    <input type="text" id="figure_name" name="figure[name]"> 
  </p> 
  <p>Select Figure Titles:</p>
  <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%></input>
    <% end %>
  
  <p><label for="new_title"></label> Enter New Title:
    <input type="text" id="new_title" name="title[name]"> 
  </p> 

  <p>Select Landmark:</p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%></input>
    <% end %>
  
  <p><label for="new_landmark"></label>Create New Landmark:<br>
    <label>Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]"><br>
    <label>Year:</label>
    <input type="text" id="landmark_year" name="landmark[year_completed]"><br>
  </p> 

  <input type="submit" value="Create New Figure">
</form>